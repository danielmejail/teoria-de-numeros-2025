\newcommand{\obien}{o bien}
\newcommand{\copulativa}{y}
\newcommand{\condicional}{si}
\newcommand{\consecuente}{entonces}
\newcommand{\suficiente}{si}
\newcommand{\necesaria}{s\'olo si}
\newcommand{\dispor}{\disptext{\disyuntiva}}
\newcommand{\disporelse}{\disptext{\obien}}
\newcommand{\dispand}{\disptext{\copulativa}}
\newcommand{\dispandif}{\disptext{\copulativa~,~~\condicional}}
\newcommand{\dispthen}{\disptext{\consecuente}}
\newcommand{\dispif}{\disptext{\suficiente}}
\newcommand{\dispfi}{\disptext{\necesaria}}
\newcommand{\dispiff}{\disptext{\suficiente~\copulativa~\necesaria}}

